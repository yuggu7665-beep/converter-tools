# Environment Variables Template
# Copy this file to .env and fill in your API keys

# App Configuration
DEBUG=False
APP_NAME="Converter Tools API"

# External API Keys (Optional - for converter tools that need them)
CURRENCY_API_KEY=your_exchange_rate_api_key_here
CRYPTO_API_KEY=your_crypto_api_key_here

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_HOUR=100

# CORS Settings (Add your Netlify URL after deployment)
ALLOWED_ORIGINS=["https://your-app.netlify.app", "https://your-custom-domain.com"]
